<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <ImageView
                android:id="@+id/item_search_results_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:maxWidth="150dp"
                android:maxHeight="200dp"
                android:src="@color/colorAccent" />

            <TextView
                android:id="@+id/item_search_results_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_search_results_image_view"
                android:layout_margin="4dp"
                android:text="Title"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/item_search_results_year_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_search_results_title_view"
                android:layout_alignParentStart="true"
                android:layout_margin="4dp"
                android:text="Year"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

            <TextView
                android:id="@+id/item_search_results_type_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_search_results_title_view"
                android:layout_alignEnd="@id/item_search_results_image_view"
                android:layout_alignRight="@id/item_search_results_year_view"
                android:layout_margin="4dp"
                android:text="Type"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>